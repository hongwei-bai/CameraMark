<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimaryDark" android:type="linear" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:endColor="@color/colorMaterialCyan60" android:startColor="@color/colorMaterialCyan" android:type="linear" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/colorAccent" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:endColor="@color/colorMaterialCyan60" android:startColor="@color/colorMaterialCyan" android:type="linear" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
        </shape>
    </item>

</selector>
